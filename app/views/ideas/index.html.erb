<div class="page-header">
  <h1>Ideas from the last week</h1>
</div>

<div class="row form">
  <div class="col-sm-8">
    <%= render :partial => 'shared/flashes', :locals => { :flash => flash } %>
    <% if @ideas.any? %>
      <%= render :partial => "idea", collection: @ideas %>
    <% else %>
      <p>There are no ideas currently. Would you like to <%= link_to "create one", new_idea_path %>?</p>
    <% end %>
  </div>
  <div class="col-sm-3 col-sm-offset-1">
    <div class="login-block">
      <% if current_user %>
        <%= image_tag current_user.avatar_url, :class => "avatar" %>
        <p class="name"><%= current_user.name %> &middot; <%= link_to "Sign out", signout_path %></p>
      <% else %>
        <p class="name"><%= link_to "Sign in with Orcid", "/auth/orcid" %></p>
      <% end %>
    </div>

    <div class="help-block">
      <h5>Voting</h5>
      <p>Vote!</p>
    </div>
  </div>
</div>
