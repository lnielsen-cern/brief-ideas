<%- [:error, :warning, :notice].each do |level| -%>
  <%- if flash[level] -%>
		<p class="<%= flash_class_for(level.to_s) %>" data-dismiss="alert"><%= flash[level] %> <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button></p>
  <%- end -%>
<%- end -%>
